<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud_detailfoto"
    tools:context=".ListTerdekat">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cari"
        android:hint="Cari Spot Terdekat"
        android:drawableLeft="?android:attr/actionModeWebSearchDrawable"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center_horizontal" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/List_menu"
        android:layout_marginTop="5dp"
        android:dividerHeight="3dp"
        android:divider="@android:color/holo_blue_bright"
        android:layout_marginBottom="5dp"/>



</LinearLayout>